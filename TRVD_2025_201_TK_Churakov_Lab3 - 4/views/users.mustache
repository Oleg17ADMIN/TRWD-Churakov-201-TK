{{> header }}

<main class="container mt-4">
  <h1 class="text-center mb-4">Список користувачів</h1>

  {{#success_msg}}<div class="alert alert-success">{{.}}</div>{{/success_msg}}
  {{#error_msg}}<div class="alert alert-danger">{{.}}</div>{{/error_msg}}

  <ul class="list-group mb-4">
    {{#users}}
      <li class="list-group-item">{{name}} ({{email}}, {{age}} років)</li>
    {{/users}}
  </ul>

  <form action="/users" method="POST" class="p-4 bg-light border rounded">
    <input type="text" name="name" placeholder="Ім'я" class="form-control mb-2" required>
    <input type="email" name="email" placeholder="Email" class="form-control mb-2" required>
    <input type="password" name="password" placeholder="Пароль" class="form-control mb-2" required>
    <input type="number" name="age" placeholder="Вік" class="form-control mb-2">
    <button type="submit" class="btn btn-primary w-100">Додати користувача</button>
  </form>
</main>

{{> footer }}
