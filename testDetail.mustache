{{> header}}

<main class="container mt-4">
  <div class="text-center">
    <h1>{{test.title}}</h1>
    {{#test.description}}<p>{{test.description}}</p>{{/test.description}}
    {{#test.timeLimit}}
      <div id="timer" class="alert alert-info mt-3" data-limit="{{test.timeLimit}}">
        Залишилось: {{test.timeLimit}}:00
      </div>
    {{/test.timeLimit}}
  </div>

<form action="/tests/{{test._id}}/submit" method="POST" id="testForm">
  <input type="hidden" name="startTimestamp" value="{{startTimestamp}}">
  
  {{#test.questions}}
  <div class="question mb-4">
    <p><strong>{{text}}</strong></p>
    
    {{#answers}}
    <div class="form-check">
      <input class="form-check-input" type="checkbox" 
             name="answers[{{../index}}][]" 
             value="{{text}}" 
             id="q{{../index}}a{{@index}}">
      <label class="form-check-label" for="q{{../index}}a{{@index}}">
        {{text}}
      </label>
    </div>
    {{/answers}}
  </div>
  {{/test.questions}}
  
  <button type="submit" class="btn btn-success">Здати тест</button>
</form>
</main>

{{> footer}}

<script src="/js/custom.js"></script>